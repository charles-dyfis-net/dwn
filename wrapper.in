 #!@zsh@

BASENAME="$(basename $prefix)"

case "$1" in
    activate)
        $prefix/bin/dwn-server > /var/log/$BASENAME.log & pid=$!
        echo "$pid" > /var/run/$BASENAME.pid
        ;;
    deactivate)
        kill $(cat /var/run/$BASENAME.pid) \
        && rm -f /var/run/$BASENAME.pid
        ;;
esac
